@{
    ViewBag.Title = "Ajustes";
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">

<style>
    body {
        background-color: #f5f6fa;
    }

    .card-custom {
        background: #16aaff;
        border-radius: 18px;
        color: white;
        padding: 25px;
        margin-bottom: 25px;
    }

    .title-main {
        font-size: 32px;
        font-weight: 700;
        color: #4a73ff;
    }

    .subtitle-main {
        margin-top: -5px;
        color: #6c7a99;
    }

    .save-btn {
        background: linear-gradient(to right, #4a73ff, #6f9cff);
        color: white !important;
        font-weight: 600;
        border-radius: 12px;
        padding: 12px;
    }

    .form-range {
        accent-color: #ffffff;
    }

    .switch-custom .form-check-input {
        width: 50px;
        height: 25px;
        cursor: pointer;
    }
</style>

<div class="container my-5">

    <h2 class="text-center title-main">Ajustes</h2>
    <p class="text-center subtitle-main">
        Personalize as configurações do aplicativo para melhor atender às suas necessidades.
    </p>

    <!-- Ajustes de Lembretes -->
    <div class="card-custom">
        <h4 class="fw-bold">Ajustes de Lembretes</h4>
        <p>Configure como você recebe os alertas de lembretes.</p>

        <div class="mt-3">
            <span class="fw-semibold">Volume do Alerta</span>
            <div class="d-flex align-items-center justify-content-between">
                <small>75%</small>
                <input type="range" class="form-range w-75" min="0" max="100" value="75">
            </div>
        </div>

        <div class="mt-4">
            <span class="fw-semibold">Vibração</span>
            <div class="form-check form-switch switch-custom mt-1">
                <input class="form-check-input" type="checkbox" checked>
                <label class="form-check-label">Ativada</label>
            </div>
        </div>
    </div>

    <!-- Personalização Visual -->
    <div class="card-custom">
        <h4 class="fw-bold">Personalização Visual</h4>
        <p>Ajuste a aparência do aplicativo para melhor conforto.</p>

        <div class="mt-3">
            <span class="fw-semibold">Tamanho da Fonte</span>
            <div class="d-flex align-items-center justify-content-between">
                <small>Médio</small>
                <input type="range" class="form-range w-75" min="1" max="5" value="3">
            </div>
        </div>

        <div class="mt-4">
            <span class="fw-semibold">Modo de Alto Contraste</span>
            <div class="form-check form-switch switch-custom mt-1">
                <input class="form-check-input" type="checkbox" checked>
                <label class="form-check-label">Ativado</label>
            </div>
        </div>
    </div>

    <!-- Salvar Alterações -->
    <div class="card-custom">
        <h4 class="fw-bold">Salvar Alterações</h4>
        <p>Confirme suas configurações para aplicá-las.</p>

        <button class="w-100 save-btn">Salvar Configurações</button>
    </div>

</div>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
