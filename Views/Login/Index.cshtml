
@{
    ViewBag.Title = "Login";
}

<div class="container d-flex" style="height:100vh;">
    <!-- Seção do formulário -->
    <div class="form-section d-flex flex-column justify-content-center p-5 bg-white" style="flex:-1;">
        <h1 class="mb-4">Criar uma conta</h1>

        @if (!string.IsNullOrEmpty(ViewBag.Erro))
        {
            <div class="alert alert-danger">@ViewBag.Erro</div>
        }

        @using (Html.BeginForm("Login", "Auth", FormMethod.Post))
        {
            @Html.AntiForgeryToken()

            <div class="mb-3">
                <input type="email" name="email" class="form-control form-control-lg" placeholder="example.email@gmail.com" required />
            </div>

            <div class="mb-3">
                <input type="password" name="password" class="form-control form-control-lg" placeholder="Sua senha" required />
            </div>

            <button type="submit" class="btn btn-primary btn-lg w-100">Entrar</button>
        }

