@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_LayoutLogin.cshtml";
}

<div class="w-100 row d-flex justify-content-between align-items-center" style="height:100vh;">
    <!-- Seção do formulário -->
    <div class="col-12 col-md-6 d-flex flex-column align-items-center justify-content-center p-7 bg-white order-2 order-md-1" >
        <h1 class="mb-4">Entrar na conta</h1>

        @if (!string.IsNullOrEmpty(ViewBag.Erro))
        {
            <div class="alert alert-danger">@ViewBag.Erro</div>
        }

        @* @using (Html.BeginForm("Login", "Auth", FormMethod.Post))
